<Window x:Class="Carrera.CarreraView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carrera"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:CarreraViewModel, IsDesignTimeCreatable=True}"
        xmlns:cal="http://www.caliburnproject.org"
        Title="Carrera" Height="500" Width="800">
    <Grid Name="MainGrid" Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Name="NamePlayer1" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="Matthias" FontSize="26.667"/>
        <Label Content="Lap:" Grid.Column="0" Grid.Row="1" FontSize="16" />
        <Label Content="{Binding LapCounter1, Mode=OneWay}" Grid.Column="1" Grid.Row="1" FontSize="26.667" />
        <Label Content="Last Lap:" Grid.Column="0" Grid.Row="2" FontSize="16" />
        <Label Content="{Binding LastLapTimeString1, Mode=OneWay}" Grid.Column="1" Grid.Row="2" FontSize="26.667" />
        <Label Content="Fastest Lap:" Grid.Column="0" Grid.Row="3" FontSize="16" />
        <Label Content="1:00:234" Grid.Column="1" Grid.Row="3" FontSize="26.667" />
        <DataGrid Name="TimePlayer1" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Width="Auto" Height="Auto" />

        <Button Grid.Column="2" Grid.Row="1" Content="Start" cal:Message.Attach="Start" MaxHeight="25"  />
        <Button Grid.Column="2" Grid.Row="2" Content="Stop" cal:Message.Attach="Stop" MaxHeight="25" />

        <TextBox Name="NamePlayer2" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="2" Text="Simone" FontSize="26.667" />
        <Label Content="Lap:" Grid.Column="3" Grid.Row="1" FontSize="16" />
        <Label Content="{Binding LapCounter2, Mode=OneWay}" Grid.Column="4" Grid.Row="1" FontSize="26.667" />
        <Label Content="Last Lap:" Grid.Column="3" Grid.Row="2" FontSize="16" />
        <Label Content="{Binding LastLapTimeString2, Mode=OneWay}" Grid.Column="4" Grid.Row="2" FontSize="26.667" />
        <Label Content="Fastest Lap:" Grid.Column="3" Grid.Row="3" FontSize="16" />
        <Label Content="1:00:234" Grid.Column="4" Grid.Row="3" FontSize="26.667" />
        <DataGrid Name="TimePlayer2" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2"  Width="Auto" Height="Auto" />        
    </Grid>
</Window>
